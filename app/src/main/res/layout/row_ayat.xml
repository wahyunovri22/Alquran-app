<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/ungu"/>
        <TextView
            android:id="@+id/tv_nama_ayat"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textAlignment="viewEnd"
            android:text="الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_no"/>
        <TextView
            android:id="@+id/tv_nama_ayat_indo"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/ungu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Dengan menyebut nama Allah Yang Maha Pemurah lagi Maha Penyayang."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_ayat"/>

        <TextView
            android:id="@+id/tv_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_ayat_indo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/abu"
            android:text="Dengan menyebut nama Allah Yang Maha Pemurah lagi Maha Penyayang."
            android:textSize="14sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>